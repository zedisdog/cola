package api

import (
	"errors"
	"github.com/gin-gonic/gin"
	"github.com/zedisdog/cola/database"
	"github.com/zedisdog/cola/transport/http/response"
	"net/http"
)

var Test = &test{}

type test struct{}

func (t test) Index(cxt *gin.Context) {
	_ = database.Instance()
	response.Success(cxt, gin.H{"success": true, "msg": "愿你有个美好的明天"})
}

func (t test) Create(cxt *gin.Context) {
	response.Success(cxt, gin.H{"test": true}, http.StatusCreated)
}

func (t test) Update(cxt *gin.Context) {
	cxt.JSON(http.StatusOK, gin.H{"success": true})
}

func (t test) Detail(cxt *gin.Context) {
	response.Error(cxt, errors.New("test error"), http.StatusInternalServerError)
}

func (t test) Delete(cxt *gin.Context) {
	response.Success(cxt)
}
