package database

import (
	"embed"
	"github.com/spf13/viper"
	"github.com/zedisdog/cola/database"
	"gorm.io/gorm"
	"sync"
)

var instance *gorm.DB

func Instance() *gorm.DB {
	var once sync.Once
	once.Do(func() {
		var err error
		instance, err = database.New(database.WithDsn(viper.GetString("database.dsn")))
		if err != nil {
			instance = nil
			panic(err)
		}
	})
	return instance
}

//go:embed migrations
var Migrations embed.FS
