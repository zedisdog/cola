package database

import (
	"github.com/spf13/viper"
	"github.com/zedisdog/cola/database"
	"gorm.io/gorm"
	"sync"
	"embed"
)

var instance *gorm.DB
var once sync.Once

func GetInstance() (*gorm.DB, error) {
	var err error
	once.Do(func() {
		instance, err = database.New(database.WithDsn(viper.GetString("dsn")))
	})
	return instance, err
}

//go:embed migrations
var Migrations embed.FS